azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja =#DD4F24

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family: Arial
	font-size: 16px

header
	background: gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color: white
	overflow hidden
	padding 0.5em
	position: relative
	z-index 1

	.logo
		border-right: 1px solid azul
		float left
		width: 60px
		
		img
			width: 52px
	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style: italic
			text-decoration: none

		.publicar
			background: naranja
			color white
			float: right
			font-style: italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration: none
			text-shadow: 1px 1px 0px black


		.titulo
			font-size: 18px
			font-weight: normal
			padding 0
			margin: 0
	
	.usuario
		position: absolute
		right 10px
		top 10px

		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2

			img
				width 50px
				border-radius: 50%

		.flechita
			background: naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			top 15px
			text-align: right
			width 50%


nav
	background: azul
	border-left 15px solid white
	position relative



	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0


	.menu
		height 40px
		line-height: 40px
		margin 0
		padding 0
		overflow-x: auto
		white-space: nowrap
		
		li
			display inline-block

			a
				color: white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration: none
.posts
	padding 0.5em

	.post
		background: white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right

				.comentarios
					background: gris_texto
					border-radius: 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

			.votos
				float left

				.down
				.up
					text-decoration none

				.down
					color red
				.up
					color green

		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left: 130px

				.autor
					margin 0.5em 0 0.2em 0
				.fecha
					float right
					margin 0 1em 0 0
					
				.tag
					background: azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style: italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left
				img
					height 160px
					vertical-align top
					width: 120px
